<div class="modal fade" id="readingModal" tabindex="-1" aria-labelledby="readingModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-fullscreen">
    <div class="modal-content">
      <div class="modal-header">
        <h2 id="readingModalLabel"><%= story.title %></h2>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Quitter"></button>
      </div>
      <div class="modal-body">
        <div class="justify-content-between">
          <p class="reading-content">
            <span class="first-letter"><%= story.content[0] %></span><%= story.content[1..-1] %>
          </p>
        </div>
      </div>
      <div class="modal-footer justify-content-center">
        <% url_speech = (story.audio.attached?) ? story.audio.url.gsub(/\.mpga/, ".mp3") : story.audio_file_name %>
        <div class="col-auto" data-controller="play" data-play-audio-file-value="<%=url_speech%>"%>

            <div data-play-target="playBtn" data-action="click->play#go">
              <%= image_tag "icons/play-circle.svg" %>
            </div>
            <div class="d-none" data-play-target="pauseBtn" data-action="click->play#pause">
              <%= image_tag "icons/pause-circle.svg" %>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>
