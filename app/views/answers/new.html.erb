<div class="my-container">
  <div class="row justify-content-start align-items-center pt-3">
    <div class="col-auto left-arrow">
      <%= link_to kid_path(@kid) do %>
        <%= image_tag "icons/arrow-left.svg"%>
      <% end %>
    </div>
    <h1><%= @kid.first_name %></h1>
    <div class="d-flex justify-content-center">
      <h2 class="mt-5"><%= @question.title %></h2>
      <button class="btn" onClick="window.location.reload();"><%= image_tag "icons/refresh-cw.svg"%></button>
    </div>
    <div class="mt-5">
      <%= render "form", question: @question, kid: @kid, answer: @answer, class: 'd-block justify-content-center align-items-center' %>
    </div>
  </div>
</div>
